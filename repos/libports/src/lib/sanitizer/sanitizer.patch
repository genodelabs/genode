+void __sanitizer::ReportFile::Write(const char *buffer, uptr length)
+{
+	SpinMutexLock l(mu);
+
+	struct Write_fn
+	{
+		void operator () (char const *s) { Genode::log(Genode::Cstring(s)); }
+	} function { };
