<runtime ram="16M" caps="300" binary="init">

	<provides>
		<rom/>
	</provides>

	<requires>
		<rm/>
	</requires>

	<content>
		<rom label="mesa_gpu-softpipe.lib.so"/>
		<rom label="cached_fs_rom"/>
		<rom label="init"/>
		<rom label="vfs"/>
		<rom label="vfs.lib.so"/>
	</content>

	<config>

		<service name="ROM">
			<default-policy>
				<child name="cached_fs_rom" label="mesa_gpu-softpipe.lib.so"/>
			</default-policy>
		</service>

		<parent-provides>
			<service name="ROM"/>
			<service name="PD"/>
			<service name="RM"/>
			<service name="CPU"/>
			<service name="LOG"/>
		</parent-provides>

		<default-route> <any-service> <parent/> <any-child/> </any-service> </default-route>

		<start name="vfs" caps="100">
			<resource name="RAM" quantum="1M"/>
			<provides> <service name="File_system"/> </provides>
			<config>
				<vfs>
					<rom name="mesa_gpu-softpipe.lib.so"/>
				</vfs>
				<default-policy root="/" writeable="no"/>
			</config>
		</start>

		<start name="cached_fs_rom" caps="100">
			<resource name="RAM" quantum="8M"/>
			<provides> <service name="ROM"/> </provides>
			<config/>
		</start>
	</config>

</runtime>
