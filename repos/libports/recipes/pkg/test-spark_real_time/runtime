<runtime ram="32M" caps="1000" binary="init">

	<requires> <timer/> </requires>

	<events>
		<timeout meaning="failed" sec="20" />
		<log meaning="succeeded">
			[init -> terminal] Slept OK*
			[init] child "test-spark_real_time" exited with exit value 0
		</log>
		<log meaning="failed">[init -> terminal] Error:</log>
	</events>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="spark.lib.so"/>
		<rom label="test-spark_real_time"/>
		<rom label="log_terminal"/>
	</content>

	<config>
		<parent-provides>
			<service name="LOG"/>
			<service name="PD"/>
			<service name="CPU"/>
			<service name="ROM"/>
			<service name="Timer"/>
		</parent-provides>
		<default-route>
			<any-service> <parent/> </any-service>
		</default-route>
		<default caps="100"/>

		<start name="terminal">
			<binary name="log_terminal"/>
			<resource name="RAM" quantum="2M"/>
			<provides><service name="Terminal"/></provides>
		</start>

		<start name="test-spark_real_time">
			<resource name="RAM" quantum="10M"/>
			<config ld_verbose="yes"/>
			<route>
				<service name="Terminal"> <child name="terminal"/> </service>
				<any-service> <parent/> <any-child/> </any-service>
			</route>
		</start>
	</config>
</runtime>
