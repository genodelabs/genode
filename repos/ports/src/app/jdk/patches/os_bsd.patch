+
+bool os::pd_commit_memory(char* addr, size_t size, bool exec) {
+
+	if (!addr) {
+		Genode::error(__PRETTY_FUNCTION__, "  addr == 0");
+		while(1);
+	}
+
+	return vm_reg->commit((Genode::addr_t)addr, size, exec);
+}
