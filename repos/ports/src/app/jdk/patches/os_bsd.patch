+
+bool os::pd_release_memory(char* addr, size_t size) {
+  return vm_reg->release((Genode::addr_t)addr, size);
+}
+
+
+bool os::pd_unmap_memory(char* addr, size_t bytes) {
+  return vm_reg->release((Genode::addr_t)addr, bytes);
+}
