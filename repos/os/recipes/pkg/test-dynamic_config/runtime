	<requires> <timer/> </requires>

	<fail after_seconds="20"/>
	<succeed>[test-dynamic_config] obtained counter value 11 from config</succeed>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="test-dynamic_config"/>
		<rom label="test-dynamic_config_server"/>
	</content>

	<config>
		<parent-provides>
			<service name="ROM"/>
			<service name="CPU"/>
			<service name="RM"/>
			<service name="PD"/>
			<service name="IRQ"/>
			<service name="IO_PORT"/>
			<service name="LOG"/>
			<service name="Timer"/>
		</parent-provides>
		<default-route>
			<any-service> <parent/> <any-child/> </any-service>
		</default-route>
		<default caps="100" ram="1M"/>
		<start name="test-dynamic_config_server">
			<provides> <service name="ROM"/> </provides>
		</start>
		<start name="test-dynamic_config" caps="500">
			<route>
				<service name="ROM" label="config">
					<child name="test-dynamic_config_server" label="config.dynamic"/>
				</service>
				<any-service> <parent/> </any-service>
			</route>
		</start>
	</config>
</runtime>
